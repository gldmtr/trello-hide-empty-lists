{
  "manifest_version": 2,

  "name": "Hide empty trello lists",
  "description": "This extension allow to hide empty lists in trello",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "js": ["trello.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
